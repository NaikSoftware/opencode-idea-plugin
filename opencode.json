{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": {
      "ls *": "allow",
      "pwd": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "find *": "allow",
      "echo *": "allow",
      "git status": "allow",
      "git diff *": "allow",
      "git diff --staged": "allow",
      "git log *": "allow",
      "git log --graph": "allow",
      "git branch": "allow",
      "git branch -v": "allow",
      "git remote -v": "allow",
      "git show *": "allow",
      "dart analyze *": "allow",
      "dart format *": "allow",
      "flutter analyze *": "allow",
      "flutter test *": "allow",
      "flutter build *": "allow",
      "gradle build *": "allow",
      "gradle test *": "allow",
      "*": "ask"
    },
    "webfetch": "ask"
  },
  "tools": {
    "gitlab_create_repository": false,
    "gitlab_fork_repository": false,
    "gitlab_create_or_update_file": false,
    "gitlab_push_files": false,
    "gitlab_create_branch": false,
    "gitlab_create_merge_request": true,
    "gitlab_update_merge_request": true,
    "gitlab_merge_merge_request": false,
    "gitlab_create_note": false,
    "gitlab_create_merge_request_thread": true,
    "gitlab_create_merge_request_note": true,
    "gitlab_update_merge_request_note": true,
    "gitlab_create_draft_note": false,
    "gitlab_update_draft_note": false,
    "gitlab_delete_draft_note": false,
    "gitlab_publish_draft_note": false,
    "gitlab_bulk_publish_draft_notes": false,
    "gitlab_create_issue": false,
    "gitlab_update_issue": false,
    "gitlab_delete_issue": false,
    "gitlab_create_issue_note": false,
    "gitlab_update_issue_note": false,
    "gitlab_create_issue_link": false,
    "gitlab_delete_issue_link": false,
    "gitlab_create_label": false,
    "gitlab_update_label": false,
    "gitlab_delete_label": false,
    "gitlab_upload_markdown": false
  },
  "keybinds": {
    "session_child_cycle": "shift+right",
    "session_child_cycle_reverse": "shift+left"
  },
  "lsp": {
    "dart": {
      "command": ["dart", "language-server", "--client-id", "opencode", "--client-version", "1.0", "--protocol", "lsp"],
      "extensions": [".dart"]
    }
  },
  "mcp": {
  }
}
